<launch>
<!-- Adding in the marker -->

  <arg name="marker_pose" default="9.7 9.79 -4 0 0 0 0" />
  <param name="marker_description" command="$(find xacro)/xacro --inorder /root/experiments/urdf/marker.urdf" />
  <node name="spawn_marker" pkg="astrobee_gazebo" type="spawn_model" args="-param marker_description -urdf -model marker -pose $(arg marker_pose)" output="screen"/>
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="marker_state_publisher" output="screen"/>

<!-- The original launch file! -->
  <include file="$(find astrobee)/launch/sim.launch">
    <arg name="dds" value="false"/>
    <arg name="robot" value="sim_pub"/>
    <arg name="rviz" value="true"/>
    <arg name="sviz" value="false"/>
  </include>
</launch>